<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="9"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/x"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_weight="2"
        android:background="@drawable/bgcolor3"
        android:gravity="center|end"
        android:hint="0"
        android:maxLength="14"
        android:padding="10dp"
        android:textColor="#000"
        android:textColorHint="#FFF"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/y"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:layout_weight="1"
        android:background="@drawable/bgcolor3"
        android:gravity="center|end"
        android:padding="10dp"
        android:textColor="#000"
        android:textColorHint="#FFF"
        android:textSize="28sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:background="@drawable/background_btn3"
            android:onClick="btn_clear"
            android:text="Delete"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:background="@drawable/background_btn3"
            android:onClick="btn_answer"
            android:text="Answer"
            android:textColor="@color/white"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/background_btn3"
            android:onClick="btn_1"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="32sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/background_btn3"
            android:onClick="btn_2"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="32sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/background_btn3"
            android:onClick="btn_3"
            android:text="3"
            android:textColor="@color/black"
            android:textSize="32sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/background_btn3"
            android:onClick="btn_bagi"
            android:text="/"
            android:textColor="@color/white"
            android:textSize="32sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/background_btn3"
            android:onClick="btn_4"
            android:text="4"
            android:textColor="@color/black"
            android:textSize="32sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/background_btn3"
            android:onClick="btn_5"
            android:text="5"
            android:textColor="@color/black"
            android:textSize="32sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/background_btn3"
            android:onClick="btn_6"
            android:text="6"
            android:textColor="@color/black"
            android:textSize="32sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/background_btn3"
            android:onClick="btn_kurang"
            android:text="-"
            android:textColor="@color/white"
            android:textSize="32sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/background_btn3"
            android:onClick="btn_7"
            android:text="7"
            android:textColor="@color/black"
            android:textSize="32sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/background_btn3"
            android:onClick="btn_8"
            android:text="8"
            android:textColor="@color/black"
            android:textSize="32sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/background_btn3"
            android:onClick="btn_9"
            android:text="9"
            android:textColor="@color/black"
            android:textSize="32sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/background_btn3"
            android:onClick="btn_kali"
            android:text="Ã—"
            android:textColor="@color/white"
            android:textSize="32sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="@drawable/background_btn3" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/background_btn3"
            android:onClick="btn_dot"
            android:text="."
            android:textColor="@color/white"
            android:textSize="32sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/background_btn3"
            android:onClick="btn_0"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="32sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/background_btn3"
            android:onClick="btn_persen"
            android:text="%"
            android:textColor="@color/white"
            android:textSize="32sp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/background_btn3"
            android:onClick="btn_tambah"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="32sp" />
    </LinearLayout>
</LinearLayout>